<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personal.PersonKassaFragment">

    <TextView
        android:id="@+id/label_kassa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/avenir_bold"
        android:textColor="@color/textColor"
        android:textSize="26sp"
        android:text="Касса" />

    <TextView
        android:id="@+id/attraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/label_kassa"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/avenir_bold"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:text="Аттракцион: Колесо обзора" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attraction"
        android:background="@drawable/qr"
       />
    <TextView
        android:id="@+id/discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/avenir_bold"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:text="Билет взрослый - 150 рублей" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/start_det"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        app:layout_constraintTop_toBottomOf="@id/discription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/primary_btn"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="150dp"
        android:elevation="10dp">
        <TextView
            android:id="@+id/text_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Переключить на детский"
            android:textColor="@color/white"
            android:fontFamily="@font/avenir_bold"
            android:textSize="18sp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>